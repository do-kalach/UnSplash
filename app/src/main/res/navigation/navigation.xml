<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.unsplash.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/collectionsFragment"
        android:name="com.example.unsplash.ui.CollectionsFragment"
        android:label="fragment_collections"
        tools:layout="@layout/fragment_collections" />
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.unsplash.ui.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_currentCollectionFragment"
            app:destination="@id/currentCollectionFragment" />
    </fragment>
    <fragment
        android:id="@+id/currentCollectionFragment"
        android:name="com.example.unsplash.ui.CurrentCollectionFragment"
        android:label="{arg}" >
        <argument
            android:name="arg"
            app:argType="string" />
        <argument
            android:name="title"
            app:argType="string" />
    </fragment>
</navigation>